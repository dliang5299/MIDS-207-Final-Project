import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns

# Example Data: Hypothetical data for visualization
data = {
    'units1': np.random.randint(10, 300, 100),
    'units2': np.random.randint(10, 200, 100),
    'dropout': np.random.uniform(0, 0.5, 100),
    'learning_rate': np.random.choice([0.001, 0.01, 0.05, 0.1], 100),
    'validation_loss': np.random.uniform(0.6, 0.8, 100)
}
df = pd.DataFrame(data)

# Create a figure with subplots
fig, axs = plt.subplots(2, 2, figsize=(15, 10))

# Plot 1: Validation Loss by Learning Rate
sns.boxplot(x='learning_rate', y='validation_loss', data=df, ax=axs[0, 0])
axs[0, 0].set_title('Validation Loss by Learning Rate')
axs[0, 0].set_xlabel('Learning Rate')
axs[0, 0].set_ylabel('Validation Loss')

# Plot 2: Validation Loss by Units1
sns.lineplot(x='units1', y='validation_loss', data=df.sort_values('units1'), marker='o', ax=axs[0, 1])
axs[0, 1].set_title('Validation Loss by Units1')
axs[0, 1].set_xlabel('Units1')
axs[0, 1].set_ylabel('Validation Loss')

# Plot 3: Validation Loss by Dropout
sns.lineplot(x='dropout', y='validation_loss', data=df.sort_values('dropout'), marker='o', ax=axs[1, 0])
axs[1, 0].set_title('Validation Loss by Dropout Rate')
axs[1, 0].set_xlabel('Dropout Rate')
axs[1, 0].set_ylabel('Validation Loss')

# Plot 4: Heatmap of Units1 vs. Learning Rate
# Prepare data for heatmap
heatmap_data = df.pivot_table(values='validation_loss', index='units1', columns='learning_rate', aggfunc='mean')
sns.heatmap(heatmap_data, cmap='viridis', ax=axs[1, 1])
axs[1, 1].set_title('Heatmap of Validation Loss\nUnits1 vs. Learning Rate')
axs[1, 1].set_xlabel('Learning Rate')
axs[1, 1].set_ylabel('Units1')

plt.tight_layout()
plt.show()
